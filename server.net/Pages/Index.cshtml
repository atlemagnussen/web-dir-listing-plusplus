@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if(Model.LibPathConfig is null)
{
    <div class="text-center">
        <h1>No config</h1>
    </div>
}
else
{
    <div>
        <h1>@Model.LibPathConfig.Title</h1>
        @if (Model.LibPathConfig.Paths != null)
        {
            @foreach (var path in Model.LibPathConfig.Paths)
            {
                <div class="root-folder">
                    <a href="@path.Key/">@path.Key</a>
                </div>
            }
        }
    </div>
}

