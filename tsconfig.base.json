{
    "compilerOptions": {
        "target": "ES2023",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ],
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@wdl/common": [
                "common/src/index.ts"
            ],
            "@wdl/client/*": [
                "client/src/*"
            ]
        },
        // Use legacy (experimental) decorators transform required by current Lit decorators
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        // For Lit legacy decorators avoid spec field define to prevent accessor shadowing warnings
        "useDefineForClassFields": false
    }
}